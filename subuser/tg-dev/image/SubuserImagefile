FROM debian:stretch
RUN apt-get update && apt-get upgrade -y && apt-get install -y golang python3 python3-urwid graphviz python3-protobuf protobuf-compiler openscad build-essential curl python3-zmq
ENV PATH $PATH:/pwd/bin
ENV DEBIAN_FRONTEND noninteractive
RUN apt-get update -qq && apt-get install -y locales -qq && locale-gen en_US.UTF-8 en_us && dpkg-reconfigure locales && dpkg-reconfigure locales && locale-gen C.UTF-8 && /usr/sbin/update-locale LANG=C.UTF-8
ENV LANG C.UTF-8
ENV LANGUAGE C.UTF-8
ENV LC_ALL C.UTF-8
